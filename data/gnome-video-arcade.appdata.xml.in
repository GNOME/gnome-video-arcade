  <screenshots>
    <screenshot type="default">
      <image>https://wiki.gnome.org/Apps/GnomeVideoArcade?action=AttachFile&amp;do=get&amp;target=screenshot-main.png</image>
    </screenshot>
  </screenshots>

  <url type="homepage">https://wiki.gnome.org/Apps/GnomeVideoArcade</url>

  <provides>
    <binary>gnome-video-arcade</binary>
  </provides>
